# 数据库配置
MONGODB_URI=mongodb://root:password@mongo:27017/aigame?authSource=admin&replicaSet=rs0

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=password

# MinIO配置
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=root
MINIO_SECRET_KEY=password
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9000
MINIO_INTERNAL_URL=http://minio:9000

# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 评测服务配置
EVALUATE_APP_URL=http://localhost:8000
EVALUATE_APP_SECRET=a-very-long-and-random-secret-string-for-callback
EVALUATE_APP_UPLOAD_SECRET=a-different-very-long-secret-for-evaluate-inbound
WEBAPP_BASE_URL=http://localhost:3000
EVALUATION_TIMEOUT_MS=900000

# 认证配置
AUTH_ORIGIN=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# 应用配置
NODE_ENV=development
NUXT_PORT=3000
NUXT_PUBLIC_BASE_URL=http://localhost:3000

# SMTP邮件配置
# SMTP服务器地址 (如: smtp.gmail.com, smtp.qq.com, smtp.163.com)
SMTP_HOST=smtp.example.com

# SMTP端口 (通常: 25, 465, 587)
SMTP_PORT=587

# SMTP用户名/邮箱 (用于登录SMTP服务器的邮箱地址)
SMTP_USER=your-email@example.com

# SMTP密码/应用专用密码 (邮箱密码或应用专用密码)
SMTP_PASS=your-smtp-password

# 发件人邮箱地址 (显示在邮件的发件人字段)
SMTP_FROM=noreply@example.com

# 发件人显示名称 (显示在邮件的发件人姓名字段)
SMTP_FROM_NAME=AI Game Platform

# 是否使用SSL连接 (true/false, 通常端口465使用SSL)
SMTP_SECURE=false

# 是否启用TLS (true/false, 通常端口587使用TLS)
SMTP_TLS=true
